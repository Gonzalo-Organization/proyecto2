<div class="ui fixed borderless large menu nav-grey">
  <a href="/" class="header item">
    <img class="ui tiny image" src="/images/fix inc_min.svg">
  </a>
  {{#if user}}
    {{#if client}}
    <a class="item" href="/client/search">Buscar</a>
    <a class="item" href="/client/problem">Tengo un Problema</a>
    {{else}}
    <a class="item" href="/member/problem">Ayudar con un Problema</a>
    {{/if}}
  {{/if}}
  <div class="right menu">
    <div class="item">
      {{#if user}}
      <div class="ui dropdown item"><img class="ui avatar image" src="{{user.profile_pic}}">
        <div class="menu">
          <a class="ui button fluid item" href="/{{#if client}}client{{else}}member{{/if}}">Perfil</a>
          <form action="/logout" method="POST">
            <button type="submit" class="ui red button fluid item"><i class="sign-out icon"></i>Salir</button>
          </form>
        </div>
      </div>
      {{else}}
      <div class="ui buttons">
        <button class="ui green button" id="login">Ingresar</button>
        <div class="or" data-text="O"></div>
        <button class="ui blue button" id="register">Registrarse</button>
      </div>
      {{/if}}
    </div>
  </div>
</div>